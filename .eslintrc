{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "plugins": ["prettier"],
    "parserOptions": {
       "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "indent": [
            "error",
            2
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
